<script>
    let isDrawerOpen = false;
    const mainDrawer = document.getElementById("main-drawer");

    function doWatchDrawer() {
        if (isDrawerOpen) {
            document.getElementById("main-drawer-transition").style.display = '';
            document.getElementsByTagName("body")[0].style.overflow = "hidden";
            mainDrawer.classList.remove("-translate-x-full");
            mainDrawer.classList.add("translate-x-0");
        } else {
            document.getElementById("main-drawer-transition").style.display = 'none';
            document.getElementsByTagName("body")[0].style.overflow = "";
            mainDrawer.classList.add("-translate-x-full");
            mainDrawer.classList.remove("translate-x-0");
        }
    }

    function drawer() {
        isDrawerOpen = !isDrawerOpen;
        doWatchDrawer();
    }

    function closeDrawer() {
        isDrawerOpen = false;
        doWatchDrawer();
    }

    function openDrawer() {
        isDrawerOpen = true;
        doWatchDrawer();
    }
</script>