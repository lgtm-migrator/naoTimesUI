<div :class="sidebarOpen ? 'block' : 'hidden'" @click="sidebarOpen = false"
    class="fixed z-20 inset-0 bg-black opacity-50 transition-opacity lg:hidden"></div>

<div :class="sidebarOpen ? 'translate-x-0 ease-out' : '-translate-x-full ease-in'"
    class="fixed z-30 inset-y-0 left-0 w-60 transition duration-300 transform bg-white dark:bg-gray-900 overflow-y-auto lg:translate-x-0 lg:static lg:inset-0">
    <div class="flex items-center justify-center mt-8">
        <div class="flex items-center">
            <span class="text-gray-800 dark:text-white text-2xl font-semibold">naoTimes</span>
        </div>
    </div>

    <nav class="flex flex-col mt-10 px-4">
        <% if (!locals.nav) { %>
            <a href="#"
                class="py-2 pl-2 text-sm text-gray-700 dark:text-gray-100 bg-gray-200 dark:bg-gray-800 rounded flex flex-row"><span
                    class="material-icons text-sm">home</span><span class="ml-1 mt-1">Ikhtisar</span></a>
            <% if (!locals.is_admin) { %>
            <a href="/admin/projek"
                class="mt-3 py-2 pl-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-100 hover:bg-gray-200 dark:hover:bg-gray-800 rounded flex flex-row"><span
                    class="material-icons text-sm">mode</span><span class="ml-1 mt-1">Projek</span></a>
            <% } else { %>
                <% if (!is_admin) { %>
                    <a href="/admin/projek"
                        class="mt-3 py-2 pl-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-100 hover:bg-gray-200 dark:hover:bg-gray-800 rounded flex flex-row"><span
                            class="material-icons text-sm">mode</span><span class="ml-1 mt-1">Projek</span></a>
                <% } %>
            <% } %>
            <a href="/admin/atur"
                class="mt-3 py-2 pl-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-100 hover:bg-gray-200 dark:hover:bg-gray-800 rounded flex flex-row"><span
                    class="material-icons text-sm">shield</span><span class="ml-1 mt-1">Adminstrasi</span></a>
        <% } else { %>
            <% if (nav === "home") { %>
                <a href="#"
                    class="py-2 pl-2 text-sm text-gray-700 dark:text-gray-100 bg-gray-200 dark:bg-gray-800 rounded flex flex-row"><span
                        class="material-icons text-sm">home</span><span class="ml-1 mt-1">Ikhtisar</span></a>
            <% } else { %>
                <a href="/admin"
                    class="py-2 pl-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-100 hover:bg-gray-200 dark:hover:bg-gray-800 rounded flex flex-row"><span
                        class="material-icons text-sm">home</span><span class="ml-1 mt-1">Ikhtisar</span></a>
            <% } %>
            <% if (!locals.is_admin) { %>
                <% if (nav === "projek") { %>
                    <a href="#"
                        class="mt-3 py-2 pl-2 text-sm text-gray-700 dark:text-gray-100 bg-gray-200 dark:bg-gray-800 rounded flex flex-row"><span
                            class="material-icons text-sm">mode</span><span class="ml-1 mt-1">Projek</span></a>
                <% } else if (nav === "projeklaman") { %>
                    <a href="/admin/projek"
                        class="mt-3 py-2 pl-2 text-sm text-gray-700 dark:text-gray-100 bg-gray-200 dark:bg-gray-800 rounded flex flex-row"><span
                            class="material-icons text-sm">mode</span><span class="ml-1 mt-1">Projek</span></a>
                <% } else { %>
                    <a href="/admin/projek"
                        class="mt-3 py-2 pl-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-100 hover:bg-gray-200 dark:hover:bg-gray-800 rounded flex flex-row"><span
                            class="material-icons text-sm">mode</span><span class="ml-1 mt-1">Projek</span></a>
                <% } %>
            <% } else { %>
                <% if (!is_admin) { %>
                    <% if (nav === "projek") { %>
                        <a href="#"
                            class="mt-3 py-2 pl-2 text-sm text-gray-700 dark:text-gray-100 bg-gray-200 dark:bg-gray-800 rounded flex flex-row"><span
                                class="material-icons text-sm">mode</span><span class="ml-1 mt-1">Projek</span></a>
                    <% } else if (nav === "projeklaman") { %>
                        <a href="/admin/projek"
                            class="mt-3 py-2 pl-2 text-sm text-gray-700 dark:text-gray-100 bg-gray-200 dark:bg-gray-800 rounded flex flex-row"><span
                                class="material-icons text-sm">mode</span><span class="ml-1 mt-1">Projek</span></a>
                    <% } else { %>
                        <a href="/admin/projek"
                            class="mt-3 py-2 pl-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-100 hover:bg-gray-200 dark:hover:bg-gray-800 rounded flex flex-row"><span
                                class="material-icons text-sm">mode</span><span class="ml-1 mt-1">Projek</span></a>
                    <% } %>
                <% } %>
            <% } %>
            <% if (nav === "settings") { %>
                <a href="#"
                    class="mt-3 py-2 pl-2 text-sm text-gray-700 dark:text-gray-100 bg-gray-200 dark:bg-gray-800 rounded flex flex-row"><span
                        class="material-icons text-sm">person</span><span class="ml-1 mt-1">Admin</span></a>
            <% } else { %>
                <a href="/admin/atur"
                    class="mt-3 py-2 pl-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-100 hover:bg-gray-200 dark:hover:bg-gray-800 rounded flex flex-row"><span
                        class="material-icons text-sm">person</span><span class="ml-1 mt-1">Admin</span></a>
            <% } %>
        <% } %>
    </nav>

    <div class="absolute items-end justify-start bottom-0 left-0 ml-4 mb-4 z-10">
        <% if (locals.commit && locals.commit_short) { %>
            <% if (commit !== "" || commit !== " ") { %>
                <div class="dark:text-gray-200 font-semibold">Commit: <a class=" text-gray-900 dark:text-gray-100 hover:opacity-80 transition-opacity duration-400" href="https://github.com/naoTimesdev/webpanel/commit/<%= commit %>"><%= commit_short %></a></div>
            <% } %>
        <% } %>
        <div class="dark:text-gray-200">© MMXXI — naoTimesDev</div>
    </div>
</div>